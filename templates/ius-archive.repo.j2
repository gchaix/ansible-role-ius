[ius-archive]
name=IUS Community Packages for Enterprise Linux {{ ius_rel }} - $basearch - Archive
#baseurl=https://dl.iuscommunity.org/pub/ius/archive/{{ ius_archive }}/{{ ansible_distribution_major_version }}/$basearch
mirrorlist=https://mirrors.iuscommunity.org/mirrorlist?repo={{ ius_repo }}-archive&arch=$basearch&protocol=http
failovermethod=priority
enabled={{ '1' if ius_repository_ius_archive|bool else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/IUS-COMMUNITY-GPG-KEY

[ius-archive-debuginfo]
name=IUS Community Packages for Enterprise Linux {{ ansible_distribution_major_version }} - $basearch - Archive Debug
#baseurl=https://dl.iuscommunity.org/pub/ius/archive/{{ ius_archive }}/{{ ansible_distribution_major_version }}/$basearch/debuginfo
mirrorlist=https://mirrors.iuscommunity.org/mirrorlist?repo={{ ius_repo }}-archive-debuginfo&arch=$basearch&protocol=http
failovermethod=priority
enabled={{ '1' if ius_repository_ius_archive_debuginfo|bool else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/IUS-COMMUNITY-GPG-KEY

[ius-archive-source]
name=IUS Community Packages for Enterprise Linux {{ ansible_distribution_major_version }} - $basearch - Archive Source
#baseurl=https://dl.iuscommunity.org/pub/ius/archive/{{ ius_archive }}/{{ ansible_distribution_major_version }}/SRPMS
mirrorlist=https://mirrors.iuscommunity.org/mirrorlist?repo={{ ius_repo }}-archive-source&arch=source&protocol=http
failovermethod=priority
enabled={{ '1' if ius_repository_ius_archive_source|bool else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/IUS-COMMUNITY-GPG-KEY
