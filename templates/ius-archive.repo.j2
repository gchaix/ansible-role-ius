[ius-archive]
name = IUS for Enterprise Linux {{ ansible_distribution_major_version }} - Archive - $basearch
baseurl = https://repo.ius.io/archive/{{ ansible_distribution_major_version }}/$basearch/
enabled = {{ '1' if ius_repository_ius_archive|bool else '0' }}
repo_gpgcheck = {{ '1' if ius_repository_ius_archive_repo_gpgcheck|bool else '0' }}
gpgcheck = {{ '1' if ius_repository_ius_archive_gpgcheck|bool else '0' }}
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-IUS-7

