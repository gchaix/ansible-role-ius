repo_gpgcheck = {{ '1' if ius_repository_ius_archive_debuginfo_repo_gpgcheck|bool else '0' }}
gpgcheck = {{ '1' if ius_repository_ius_archive_debuginfo_gpgcheck|bool else '0' }}
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-IUS-7

