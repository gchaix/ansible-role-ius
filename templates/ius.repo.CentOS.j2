[ius]
name=IUS Community Packages for Enterprise Linux {{ ansible_distribution_major_version }} - $basearch
#baseurl=https://dl.iuscommunity.org/pub/ius/stable/CentOS/{{ ansible_distribution_major_version }}/$basearch
mirrorlist=https://mirrors.iuscommunity.org/mirrorlist?repo=ius-centos{{ ansible_distribution_major_version }}&arch=$basearch&protocol=http
failovermethod=priority
{% if ius_repos.ius is defined %}
{%   if ius_repos.ius %}
enabled=1
{%   else %}
enabled=0
{%   endif %}
{% else %}
enabled=0
{% endif %}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/IUS-COMMUNITY-GPG-KEY

