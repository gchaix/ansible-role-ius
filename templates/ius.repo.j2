[ius]
name=IUS Community Packages for Enterprise Linux {{ ansible_distribution_major_version }} - $basearch
#baseurl=https://dl.iuscommunity.org/pub/ius/stable/{{ ius_archive }}/{{ ansible_distribution_major_version }}/$basearch
mirrorlist=https://mirrors.iuscommunity.org/mirrorlist?repo={{ ius_repo }}&arch=$basearch&protocol=http
failovermethod=priority
enabled={{ '1' if ius_repository_ius|bool else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/IUS-COMMUNITY-GPG-KEY

[ius-debuginfo]
name=IUS Community Packages for Enterprise Linux {{ ansible_distribution_major_version }} - $basearch - Debug
#baseurl=https://dl.iuscommunity.org/pub/ius/stable/{{ ius_archive }}/{{ ansible_distribution_major_version }}/$basearch/debuginfo
mirrorlist=https://mirrors.iuscommunity.org/mirrorlist?repo={{ ius_repo }}-debuginfo&arch=$basearch&protocol=http
failovermethod=priority
enabled={{ '1' if ius_repository_ius_debuginfo|bool else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/IUS-COMMUNITY-GPG-KEY

[ius-source]
name=IUS Community Packages for Enterprise Linux {{ ansible_distribution_major_version }} - $basearch - Source
#baseurl=https://dl.iuscommunity.org/pub/ius/stable/{{ ius_archive }}/{{ ansible_distribution_major_version }}/SRPMS
mirrorlist=https://mirrors.iuscommunity.org/mirrorlist?repo={{ ius_repo }}-source&arch=source&protocol=http
failovermethod=priority
enabled={{ '1' if ius_repository_ius_source|bool else '0' }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/IUS-COMMUNITY-GPG-KEY
