[ius-testing]
name = IUS for Enterprise Linux {{ ansible_distribution_major_version }} - Testing - $basearch
baseurl = https://repo.ius.io/testing/{{ ansible_distribution_major_version }}/$basearch/
enabled = {{ '1' if ius_repository_ius_testing|bool else '0' }}
repo_gpgcheck = {{ '1' if ius_repository_ius_testing_repo_gpgcheck|bool else '0' }}
gpgcheck = {{ '1' if ius_repository_ius_testing_gpgcheck|bool else '0' }}
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-IUS-7

